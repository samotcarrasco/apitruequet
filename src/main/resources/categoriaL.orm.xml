<?xml version="1.0" encoding="UTF-8"?> 
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" 
	version="1.0"> 
	
     <mapped-superclass class="es.mde.acing.utils.CategoriaL" access="FIELD">

        <attributes>

            <basic name="categoria">
    			<column name="categoria"/>
			</basic>	

            <basic name="descripcion">
                <column name="descripcion"/>
            </basic>

            <basic name="grupo" >
				 <column name="grupo"/>
            </basic>

            <basic name="minMilis">
                <column name="minMilis"/>
            </basic>

            <basic name="maxMilis">
                <column name="maxMilis"/>
            </basic>
      		<one-to-many name="materiales" mapped-by="categoria" target-entity="es.mdef.apitruequet.entidades.Material"/>
     
        </attributes>
    </mapped-superclass>

</entity-mappings>